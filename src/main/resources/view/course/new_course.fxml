<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="100.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.studentattendance.gui.controllers.course.NewCourseController">
    <center>

        <GridPane alignment="CENTER" hgap="10" prefHeight="100.0" prefWidth="300.0" vgap="10"
                  BorderPane.alignment="CENTER">
            <Label text="Повна назва:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="courseNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Код предмету:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="courseCodeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button onAction="#handleAddButton" text="Додати" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
    </center>
</BorderPane>
